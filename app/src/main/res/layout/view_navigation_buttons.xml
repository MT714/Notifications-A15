<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/nav_button_padding">

    <ImageButton
        android:id="@+id/btn_previous"
        android:layout_width="@dimen/nav_button_size"
        android:layout_height="@dimen/nav_button_size"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/nav_button_margin"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Precedente"
        android:src="@drawable/ic_arrow_left"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/btn_next"
        android:layout_width="@dimen/nav_button_size"
        android:layout_height="@dimen/nav_button_size"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/nav_button_margin"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Successivo"
        android:src="@drawable/ic_arrow_right"
        android:scaleType="fitCenter"/>

</RelativeLayout>